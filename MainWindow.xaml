<Window x:Class="TimeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" WindowState="Maximized"
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <DockPanel VerticalAlignment="Top">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Button Click="" Name="" Width="30" Height="30" Margin="0, 0, 10, 0" BorderThickness="0"/>
                <Button Click="" Name="" Width="30" Height="30" Margin="0, 0, 10, 0"  BorderThickness="0"/>
                <Button Click="BtnClose_Click" Name="Close" Width="30" Height="30" Margin="0, 0, 10, 0" BorderThickness="0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
